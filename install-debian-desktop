#!/bin/bash -ex

. ./install-debian-console

cat <<EOL | sudo tee /etc/apt/sources.list.d/numix.list
# Auto-generated
# Numix
deb http://ppa.launchpad.net/numix/ppa/ubuntu trusty main
deb-src http://ppa.launchpad.net/numix/ppa/ubuntu trusty main
EOL

# Support HTTPS
sudo apt-get install -y apt-transport-https

# Update
sudo apt-get update

# Install packages
sudo apt-get install -y \
    fonts-vlgothic ibus-mozc \
    xsel keepass2 xdotool \
    libcanberra-gtk-module

# Install packages force
sudo apt-get install -y --force-yes \
    numix-gtk-theme numix-folders numix-icon-theme
